{
  "name": "Instagram Counter",
  "version": "1.0.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Instagram Counter",
    "default_icon": "./src/img/logo.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "tabs", "storage", "https://www.instagram.com/*"]
}
